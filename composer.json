{
    "name": "tpg/extjs-bundle",
    "type": "symfony-bundle",
    "description": "Use ExtJs with Symfony 2",
    "keywords": ["extjs", "bundle", "symfony2"],
    "homepage": "https://github.com/jamesmoey/extjs-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "James Moey",
            "email": "james.moey@tradingpursuits.com"
        }
    ],
    "require": {
        "php": "~5.3",
        "symfony/symfony": "~2.3",
        "doctrine/orm": "~2.2",
        "jms/serializer": ">=0.12,<=0.14",
        "jms/serializer-bundle": ">=0.12,<0.14-dev",
        "jms/di-extra-bundle": "~1.4",
        "sensio/generator-bundle": "2.3.*",
        "friendsofsymfony/rest-bundle": "~1.0",
        "incenteev/composer-parameter-handler": "~2.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "~1.2",
        "doctrine/mongodb-odm": "1.0.*@dev",
        "doctrine/mongodb-odm-bundle": "3.0.*@dev",
        "phpunit/phpunit": "~3.7"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "autoload": {
        "psr-0": { "Tpg\\ExtjsBundle": "" }
    },
    "target-dir": "Tpg/ExtjsBundle",
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "incenteev-parameters": {
            "file": "Tests/app/config/parameters.yml"
        }
    }
}
